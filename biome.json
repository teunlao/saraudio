{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "vcs": {
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**",
      "!external",
      "!.external",
      "!**/node_modules",
      "!**/dist",
      "!**/.build",
      "!**/.build/**",
      "!.katacut",
      "!**/.vitepress",
      "!.svelte",
      "!**/*.svelte",
      "!**/.svelte-kit",
      "!**/*.vue",
      "!**/.nuxt",
      "!**/.output",
      "!**/*.js",
      "!**/*.mjs",
      "!**/*.cjs",
      "!**/*.d.ts",
      "!**/.vinxi",
      "!**/assets",
      "!**/public"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "useEditorconfig": true,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "suspicious": {
        "useIterableCallbackReturn": "off",
        "noExplicitAny": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  }
}
