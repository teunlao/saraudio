{
  "name": "svelte-audio-recorder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "serve": "pnpm exec vite dev",
    "build": "pnpm exec vite build",
    "preview": "pnpm exec vite preview",
    "prepare": "pnpm exec svelte-kit sync || echo ''",
    "check": "pnpm exec svelte-kit sync && pnpm exec svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "pnpm exec svelte-kit sync && pnpm exec svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.47.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "4.1.16",
    "svelte": "^5.41.0",
    "svelte-check": "^4.3.3",
    "tailwindcss": "4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  },
  "dependencies": {
    "@saraudio/core": "workspace:*",
    "@saraudio/meter": "workspace:*",
    "@saraudio/runtime-browser": "workspace:*",
    "@saraudio/svelte": "workspace:*",
    "@saraudio/vad-energy": "workspace:*"
  }
}
